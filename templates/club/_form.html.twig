{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    <div class="form-group">
        {{ form_label(form.name, 'Name', {'label_attr': {'class': 'label'}}) }}
        {{ form_widget(form.name, { 'attr': {'class': 'input'}}) }}
        <div class="form-group__errors">
            {{ form_errors(form.name) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.badge, 'Badge', {'label_attr': {'class': 'label'}}) }}
        {{ form_widget(form.badge, { 'attr': { 'class': 'file-input' }}) }}
        <div class="form-group__errors">
            {{ form_errors(form.badge) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.stadium, 'Stadium', {'label_attr': {'class': 'label'}}) }}
        {{ form_widget(form.stadium, { 'attr': {'class': 'select'}}) }}
        <div class="form-group__errors">
            {{ form_errors(form.stadium) }}
        </div>
    </div>
    {{ form_rest(form) }}
    <div class="form__actions">
        <button class="btn btn--primary">{{ button_label|default('Save') }}</button>
        <a class="btn btn--secondary" href="{{ path('app_club_index') }}">Cancel</a>
    </div>
