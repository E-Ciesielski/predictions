{% extends 'base.html.twig' %}

{% block title %}Game{% endblock %}

{% block body %}
    <h1>Game</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ game.id }}</td>
            </tr>
            <tr>
                <th>HomeScore</th>
                <td>{{ game.homeScore }}</td>
            </tr>
            <tr>
                <th>AwayScore</th>
                <td>{{ game.awayScore }}</td>
            </tr>
            <tr>
                <th>StartDateTime</th>
                <td>{{ game.startDateTime ? game.startDateTime|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>GameWeek</th>
                <td>{{ game.gameWeek }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_game_index') }}">back to list</a>

    <a href="{{ path('app_game_edit', {'id': game.id}) }}">edit</a>

    {{ include('game/_delete_form.html.twig') }}
{% endblock %}
