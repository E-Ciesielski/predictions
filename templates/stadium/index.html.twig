{% extends 'base.html.twig' %}

{% block title %}Stadium index{% endblock %}

{% block body %}
    <h1>Stadium index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Country</th>
                <th>City</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for stadium in stadiums %}
            <tr>
                <td>{{ stadium.id }}</td>
                <td>{{ stadium.name }}</td>
                <td>{{ stadium.country }}</td>
                <td>{{ stadium.city }}</td>
                <td>
                    <a href="{{ path('app_stadium_show', {'id': stadium.id}) }}">show</a>
                    <a href="{{ path('app_stadium_edit', {'id': stadium.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_stadium_new') }}">Create new</a>
{% endblock %}
